- var page = 'offer-data'
doctype html
html(lang=i18n.lng())
  include ./header.jade
  body
    include ./menu.jade

    #content.header
      .container
        .row
          .col-md-12
            h1.with-subtitle= t('offer-data:::main_title')
            .main-subtitle= t('offer-data:::main_subtitle')

    .container.offer
      .row
        .col-md-12
          h2= t('offer-data:::opendata_title')
          div.subtitle= t('offer-data:::opendata_subtitle')
      .row            
        .col-sm-6.col-xs-12
          p= t('offer-data:::opendata_items_intro')
          div.list-items!= t('offer-data:::opendata_items')
          a.btn.btn-sm.btn-page.pull-left(href=getPageLink('contact'))= t('offer-data:::contact_us')
        .col-sm-6
          img.img-responsive(src='/static/img/Image_opendata_' + i18n.lng() + '.png', alt='Illustration Open Data')

    .img-background
      .container.offer
        .row
          .col-md-12
            h2.text-right= t('offer-data:::bigdata_title')
            div.subtitle.text-right= t('offer-data:::bigdata_subtitle')
        .row
          .col-sm-6
            img.img-responsive(src='/static/img/Image_bigdata_' + i18n.lng() + '.png', alt='Illustration Big Data')
          .col-sm-5.col-sm-offset-1
            p= t('offer-data:::bigdata_items_intro')
            div.list-items
              != t('offer-data:::bigdata_items')
              a.btn.btn-sm.btn-page(href=getPageLink('contact'))= t('offer-data:::contact_us')

    .container.offer
      .row
        .col-md-12
          h2= t('offer-data:::smartdata_title')
          div.subtitle= t('offer-data:::smartdata_subtitle')
      .row
        .col-sm-6
          p= t('offer-data:::smartdata_items_intro')
          div.list-items!= t('offer-data:::smartdata_items')
          a.btn.btn-sm.btn-page.pull-left(href=getPageLink('contact'))= t('offer-data:::contact_us')
        .col-sm-6
          img.img-responsive(src='/static/img/Image_smartdata_' + i18n.lng() + '.png', alt='Illustration Smart Data')

    include ./footer.jade
    include ./scripts.jade
