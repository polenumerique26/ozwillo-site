- var page = 'offer-portal'
doctype html
html(lang=i18n.lng())
  include ./header.jade
  body
    include ./menu.jade

    .header
      .container
        .row
          .col-md-12
            h1.with-subtitle= t('offer-portal:::main_title')
            .main-subtitle= t('offer-portal:::main_subtitle')
    
    .container.offer
      .row
        .col-md-6.col-sm-12
          h2= t('offer-portal:::customized_title')
          div= t('offer-portal:::customized_subtitle')
          div.list-items
            p.items-header= t('offer-portal:::customized_applications')
            != t('offer-portal:::customized_applications_items')
          div.list-items
            p.items-header= t('offer-portal:::customized_data')
            != t('offer-portal:::customized_data_items')
            a.btn.btn-sm.btn-page.pull-left(href=getPageLink('contact'))= t('offer-portal:::contact_us')
        .col-md-6.hidden-sm.hidden-xs
          img.img-responsive.img-block-illustration(src='/static/img/Image_portail_personnalise.png', alt='Illustration Portail personnalis√©')
    
    .img-background
      .container.offer
        .row
          .col-md-6.hidden-sm.hidden-xs
            img.img-responsive.img-block-illustration(src='/static/img/Image_portail_communautaire.png', alt='Illustration Portail communautaire')
          .col-md-5.col-md-offset-1.col-sm-12with-background
            h2= t('offer-portal:::community_title')
            div= t('offer-portal:::community_subtitle')
            div.list-items
              p.items-header= t('offer-portal:::community_development')
              != t('offer-portal:::community_development_items')
            div.list-items
              p.items-header= t('offer-portal:::community_use')
              != t('offer-portal:::community_use_items')
            a.btn.btn-sm.btn-page.pull-left(href=getPageLink('contact'))= t('offer-portal:::contact_us')

    include ./footer.jade
    include ./scripts.jade
