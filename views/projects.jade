- var page = 'projects'
doctype html
html(lang=i18n.lng())
  include ./header.jade
  body
    include ./menu.jade

    // OASIS
    .BG
      .container
        .row
          .col-md-6
            h1.titreInter= t('projects:::oasis_title')
          .col-md-6
            img.img-responsive.image.right(src='/static/img/project.png')

    .grey
      .container
        .row
          .col-md-12
            img.img-responsive.center-block(src='/static/img/oasis.jpg')
            div(style='display:block;height:35px;width:100%;clear:both;')
        .row
          .col-md-6
            p.paraHome= t('projects:::oasis_text_1')
            p.paraHome= t('projects:::oasis_text_2')
            p.paraHome= t('projects:::oasis_text_3')
            p.paraHome!= t('projects:::oasis_financer_title')
            p.paraHome
              img(src='/static/img/rhonealpes.jpg')
              img(src='/static/img/ladrome.jpg')
              img(src='/static/img/ardeche.jpg')
          .col-md-6
            p.paraHome!= t('projects:::oasis_goal_title')
            ul.liensInter
              li= t('projects:::oasis_goal_item_1')
              li= t('projects:::oasis_goal_item_2')
              li= t('projects:::oasis_goal_item_3')
              li= t('projects:::oasis_goal_item_4')
              li= t('projects:::oasis_goal_item_5')

    // Map
    .map
      .container
        .row
          .col-md-12
            h2.soustitre3!= t('projects:::map_title')
            img.img-responsive.center-block.aligne(src='/static/img/carte.png')

    // Partenaire
    .container
      .row
        .col-md-12
          h2.soustitre2!= t('projects:::partner_title')
      .row
        .col-md-6
          h3.text-center!= t('projects:::partner_column_1_title')
          ul.liensInter
            li!= t('projects:::partner_column_1_item_1')
            li!= t('projects:::partner_column_1_item_2')
            li!= t('projects:::partner_column_1_item_3')
        .col-md-6
          h3.text-center!= t('projects:::partner_column_2_title')
          ul.liensInter
            li!= t('projects:::partner_column_2_item_1')
            li!= t('projects:::partner_column_2_item_2')

    // Premières Apps
    .grey
      .container
        .row
          .col-md-12
            h2.soustitre2!= t('projects:::apps_title')
        .row
          .col-md-2.col-sm-4.flag.text-center
            img(src='/static/img/france.png')
            span!= t('projects:::apps_fr', { postProcess: "jade" })
          .col-md-2.col-sm-4.flag.text-center
            img(src='/static/img/bulgarie.png')
            span!= t('projects:::apps_bg', { postProcess: "jade" })
          .col-md-2.col-sm-4.flag.text-center
            img(src='/static/img/turquie.png')
            span!= t('projects:::apps_tr', { postProcess: "jade" })
          .col-md-2.col-sm-4.flag.text-center
            img(src='/static/img/italie.png')
            span!= t('projects:::apps_it', { postProcess: "jade" })
          .col-md-2.col-sm-4.flag.text-center
            img(src='/static/img/espagne.png')
            span!= t('projects:::apps_es', { postProcess: "jade" })

    // Livrables
    .container
      .row
        .col-md-6
          h2.soustitre!= t('projects:::delivrable_title', { postProcess: "jade" })
          p.paraHome!= t('projects:::delivrable_text', { postProcess: "jade" })
          ul.liensInter
            li= t('projects:::delivrable_explaination_1')
            li= t('projects:::delivrable_explaination_2')
            li= t('projects:::delivrable_explaination_3')
            li= t('projects:::delivrable_explaination_4')
            li= t('projects:::delivrable_explaination_5')
            li= t('projects:::delivrable_explaination_6')
        .col-md-6.violet
          .row
            .col-md-12
              span.intertitre=t('projects:::delivrable_list_title')
          .row
            .col-md-3.column.white
              a(target="_blank" href='/static/pdf/OASIS_D1.1_Platform-requirements_vf.pdf')
                img(src='/static/img/pdf.png')
              !=t('projects:::delivrable_item_1')
            .col-md-3.column.white
              a(target="_blank" href='/static/pdf/OASIS_D1.2_Architectural-design-first-iteration_vf.pdf')
                img(src='/static/img/pdf.png')
              !=t('projects:::delivrable_item_2')
            .col-md-3.column.white
              a(target="_blank" href='/static/pdf/OASIS_D1.32_Privacy-requirements-personal-data-legislation-second-iteration_vf.pdf')
                img(src='/static/img/pdf.png')
              !=t('projects:::delivrable_item_3')
            .col-md-3.column.white
              a(target="_blank" href='/static/pdf/OASIS_D2.1_Report-implementation_vf_bd2.pdf')
                img(src='/static/img/pdf.png')
              !=t('projects:::delivrable_item_4')
            .col-md-3.column.white
              a(target="_blank" href='/static/pdf/OASIS_D2.2_Guidelines-for-designing-services_vf.pdf')
                img(src='/static/img/pdf.png')
              !=t('projects:::delivrable_item_5')
            .col-md-3.column.white
              a(target="_blank" href='/static/pdf/OASIS_D2.3_Adapted-solutions-user-identification-authentication_vf.pdf')
                img(src='/static/img/pdf.png')
              !=t('projects:::delivrable_item_6')
            .col-md-3.column.white
              a(target="_blank" href='/static/pdf/OASIS_D3.1_Business-case-first-iteration_vf_bd.pdf')
                img(src='/static/img/pdf.png')
              !=t('projects:::delivrable_item_7')
            .col-md-3.column.white
              a(target="_blank" href='/static/pdf/OASIS_D3.4_Governance_VF.pdf')
                img(src='/static/img/pdf.png')
              !=t('projects:::delivrable_item_8')
            .col-md-3.column.white
              a(target="_blank" href='/static/pdf/OASIS_D51_Initial-KPIs-Report-Requirements_vf.pdf')
                img(src='/static/img/pdf.png')
              !=t('projects:::delivrable_item_9')
            .col-md-3.column.white
              a(target="_blank" href='/static/pdf/OASIS_D6.1_Management_Manual_vf.pdf')
                img(src='/static/img/pdf.png')
              !=t('projects:::delivrable_item_10')
            .col-md-3.column.white
              a(target="_blank" href='/static/pdf/OASIS_D6.31_Dissemination-Exploitation-of-foreground-N1_vf.pdf')
                img(src='/static/img/pdf.png')
              !=t('projects:::delivrable_item_11')

    // OCCIWare
    .grey
      .container
        .row
          .col-md-12
            img.img-responsive.center-block.espace(src='/static/img/occiware.png')
            h2.soustitre2!= t('projects:::occi_title')
            p.paraViolet!= t('projects:::occi_subtitle')
        .row
          .col-md-6
            p.paraHome.retrait= t('projects:::occi_column_1')
          .col-md-6
            p.paraHome.retrait= t('projects:::occi_column_2')

    // Démonstrateur
    .sky
      .container
        .row
          .col-md-12
            h2.soustitre3!= t('projects:::demonstrator_title')
        .row
          .col-md-6
            p.paraHome.black.retrait2!= t('projects:::demonstrator_column_1_text')
            ul.liensInter.retrait2
              li= t('projects:::demonstrator_column_1_item_1')
              li= t('projects:::demonstrator_column_1_item_2')
              li= t('projects:::demonstrator_column_1_item_3')
          .col-md-6
            p.paraHome.black.retrait2li!= t('projects:::demonstrator_column_2_text')
            ul.liensInter.retrait2
              li= t('projects:::demonstrator_column_2_item_1')
              li= t('projects:::demonstrator_column_2_item_2')
              li= t('projects:::demonstrator_column_2_item_3')

    // Évolution & Développement
    .container
      .row
        .col-md-12
          h2.soustitre2!= t('projects:::evolutions_title')
        .col-md-6
          ul.liensInter.retrait2
            li= t('projects:::evolutions_column_1_item_1')
            li= t('projects:::evolutions_column_1_item_2')
            li= t('projects:::evolutions_column_1_item_3')
            li= t('projects:::evolutions_column_1_item_4')
        .col-md-6
          ul.liensInter.retrait2
            li= t('projects:::evolutions_column_2_item_1')
            li= t('projects:::evolutions_column_2_item_2')
            li= t('projects:::evolutions_column_2_item_3')

    include ./footer.jade
    include ./scripts.jade
